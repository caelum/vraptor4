<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/beans_1_1.xsd"
         version="1.1" bean-discovery-mode="all">
         
	<scan>
		<exclude name="br.com.caelum.vraptor.converter.jodatime.*">
			<if-class-not-available name="org.joda.time.LocalDate"/>
		</exclude>
	
		<exclude name="br.com.caelum.vraptor.proxy.ObjenesisInstanceCreator">
			<if-class-not-available name="org.objenesis.ObjenesisStd"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.proxy.ReflectionInstanceCreator">
			<if-class-available name="org.objenesis.ObjenesisStd"/>
		</exclude>
	
		<exclude name="br.com.caelum.vraptor.validator.MethodValidatorFactoryCreator">
			<if-class-not-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>

		<exclude name="br.com.caelum.vraptor.validator.MethodValidatorInterceptor">
			<if-class-not-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>

		<exclude name="br.com.caelum.vraptor.validator.DefaultBeanValidator">
			<if-class-not-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.validator.ValidatorCreator"> 
			<if-class-not-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>

		<exclude name="br.com.caelum.vraptor.validator.ValidatorFactoryCreator"> 
			<if-class-not-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>

		<exclude name="br.com.caelum.vraptor.validator.MessageInterpolatorFactory">
			<if-class-not-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.validator.NullBeanValidator">
			<if-class-available name="javax.validation.executable.ExecutableValidator"/>
		</exclude>
	
		<exclude name="br.com.caelum.vraptor.interceptor.multipart.CommonsUploadMultipartInterceptor">
			<if-class-not-available name="org.apache.commons.fileupload.FileItem"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.interceptor.multipart.DefaultServletFileUploadCreator">
			<if-class-not-available name="org.apache.commons.fileupload.FileItem"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.interceptor.multipart.Servlet3MultipartInterceptor">
			<if-class-available name="org.apache.commons.fileupload.FileItem"/>
			<if-class-not-available name="javax.servlet.http.Part"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.interceptor.multipart.NullMultipartInterceptor">
			<if-class-available name="org.apache.commons.fileupload.FileItem"/>
		</exclude>
		
		<exclude name="br.com.caelum.vraptor.interceptor.multipart.NullMultipartInterceptor">
			<if-class-available name="javax.servlet.http.Part"/>
		</exclude>
	</scan>
	
</beans>